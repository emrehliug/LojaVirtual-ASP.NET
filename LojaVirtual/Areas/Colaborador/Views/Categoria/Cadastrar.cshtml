@model Categoria

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" placeholder="Digite a nova Categoria">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug">Slug</label>
        <input asp-for="Slug" class="form-control" placeholder="Digite o Slug da Categoria">
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaPaiId">Categoria Pai</label>
        <input asp-for="CategoriaPaiId" class="form-control" placeholder="Digite o ID da Categoria Pai">
        <span asp-validation-for="CategoriaPaiId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>  <a asp-action="Index" class="btn btn-primary">Voltar</a>
</form>